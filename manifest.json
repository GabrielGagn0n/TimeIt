{
  "manifest_version": 2,
  "name": "TimeIt Extension",
  "version": "1.0",
  "description": "Adds a timer to certain websites.",
  "permissions": ["storage", "activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}
